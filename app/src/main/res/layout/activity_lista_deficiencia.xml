<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >


    <Spinner
        android:id="@+id/sp_deficiencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/et_Ragresivo_deficiencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp_deficiencia"
        android:layout_alignStart="@+id/sp_deficiencia"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=""/>

    <EditText
        android:id="@+id/et_Rmedicacion_deficiencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_Ragresivo_deficiencia"
        android:layout_alignStart="@+id/et_Ragresivo_deficiencia"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="" />

    <EditText
        android:id="@+id/et_Rcrisis_deficiencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_Rmedicacion_deficiencia"
        android:layout_alignEnd="@+id/et_Rmedicacion_deficiencia"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="" />

    <EditText
        android:id="@+id/et_Rdependencia_deficiencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_Rcrisis_deficiencia"
        android:layout_alignEnd="@+id/et_Rcrisis_deficiencia"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="" />

    <Button
        android:id="@+id/bt_actualizard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sp_deficiencia"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="ACTUALIZAR" />

    <Button
        android:id="@+id/bt_registrard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bt_actualizard"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="1dp"
        android:layout_toStartOf="@+id/bt_eliminard"
        android:layout_toEndOf="@+id/bt_actualizard"
        android:text="REGISTRAR"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/bt_eliminard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sp_deficiencia"
        android:layout_alignBottom="@+id/bt_actualizard"
        android:text="ELIMINAR" />

</RelativeLayout>

